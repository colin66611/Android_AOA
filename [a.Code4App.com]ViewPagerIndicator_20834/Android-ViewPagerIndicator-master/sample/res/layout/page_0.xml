<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal" 
        android:gravity="right|center" >

        <Button
            android:id="@+id/btn_language"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:textSize="20sp"
            android:text="中文/English" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal" 
        android:gravity="center">

        <Button
            android:id="@+id/btn_TV_up"
            android:layout_width="400dp"
            android:layout_height="120dp"
            android:layout_marginRight="50dp"
            android:textSize="30sp"
            android:text="电视升" />

        <Button
            android:id="@+id/btn_glass_up"
            android:layout_width="400dp"
            android:layout_height="120dp"
            android:layout_marginLeft="50dp"
            android:textSize="30sp"
            android:text="私密玻璃升" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal" 
        android:gravity="center">
        
        <ToggleButton  
            android:id="@+id/btn_TV_swtich"
            android:layout_width="400dp"
            android:layout_height="120dp"
            android:layout_marginRight="50dp"
            android:textSize="30sp"
            android:textOn="电视开"
            android:textOff="电视关" />
        
        <ToggleButton
            android:id="@+id/btn_glass_change"
            android:layout_width="400dp"
            android:layout_height="120dp"
            android:layout_marginLeft="50dp"
            android:textSize="30sp"
            android:textOn="私密玻璃变色(雾化)" 
            android:textOff="私密玻璃恢复"/>
        
    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:gravity="center">
        
        <Button
            android:id="@+id/btn_TV_down"
            android:layout_width="400dp"
            android:layout_height="120dp"
            android:layout_marginRight="50dp"
            android:textSize="30sp"
            android:text="电视降" />

        <Button
            android:id="@+id/btn_glass_down"
            android:layout_width="400dp"
            android:layout_height="120dp"
            android:layout_marginLeft="50dp"
            android:textSize="30sp"
            android:text="私密玻璃降" />
        
    </LinearLayout>



</LinearLayout>
